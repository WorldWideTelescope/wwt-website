@using System.Configuration

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Head{
    <script src="@Model.JsDir/pages/home.js?v=@Model.ResVer"></script>
    <script src="@Model.JsDir/controls/util.js?v=@Model.ResVer"></script>	
    <script>
        $(function() {
            wwt.home.init();
        });
    </script>
}


    

<div class="row">
    <div class="col-md-12 home-install">

        <div id="heroDiv">
            <div class="carousel slide" id="carousel" data-ride="carousel" data-interval="8000">

                <ol class="carousel-indicators">
                    <li data-target="#carousel" data-slide-to="0" class="active" title="Visit the horsehead nebula with WorldWide Telescope"></li>
                    <li data-target="#carousel" data-slide-to="1" title="WorldWide Telescope features Bing 3D Cities"></li>
                    <li data-target="#carousel" data-slide-to="2" title="Mars"></li>
                    <li data-target="#carousel" data-slide-to="3" title="Explore Earth with WorldWide Telescope"></li>
                    <li data-target="#carousel" data-slide-to="4" title="IMPACTS - a virtual reality experience"></li>
                </ol>

                <div class="carousel-inner">
     
                    <div class="item active">
                        <img alt="Visit the horsehead nebula with WorldWide Telescope" src="@Model.ImgDir/horsehead.jpg" class="img-responsive" id="heroBg" />
                        <div class="hero-backdrop right">
                            <h1 class="text-white">Horsehead and Flame Nebula</h1>
                            <p class="text-white">Now you can visit the horsehead nebula at lunch, and still be home in time for dinner.</p>
                            <p class="text-white"><a href="/webclient/#/place=59.18&ra=5.66500&dec=-2.40056&fov=2.65720">View it in the WWT Web Client.</a></p>
                        </div>
                    </div>
                    <div class="item">
                        <img alt="WorldWide Telescope features Bing 3D Cities" src="@Model.ImgDir/seattle.jpg" class="img-responsive" id="heroBg" />
                        <div class="hero-backdrop right">
                            <h1 class="text-white">Explore our world in 3D using WorldWide Telescope.</h1>
                            <p class="text-white"><a href="/Download/" style="text-decoration: underline">Download WorldWide Telescope.</a></p>
                        </div>
                    </div>
                    <div class="item">
                        <img alt="Mars" src="@Model.ImgDir/mars.jpg" id="heroBg" class="img-responsive" />

                        <div class="hero-backdrop left">
                            <h1 class="text-white">HiRISE: Mars High Resolution Imagery </h1>
                            <p class="text-white">Explore the surface of our nearest neighbor.</p>
                            <p class="text-white"><a href="/webclient/#/place=Mars.HIRISE_Spotlight.16&lookAt=Planet&ra=3.55100&dec=-14.23470&fov=1.21484">View it here.</a></p>
                        </div>
                    </div>
                    <div class="item">
                        <img alt="Explore Earth with WorldWide Telescope" src="@Model.ImgDir/earth.jpg" class="img-responsive" id="heroBg" />

                        <div class="hero-backdrop left">
                            <h1 class="text-white" style="line-height: 1.5">Take a virtual tour of our world without leaving your desk.</h1>
                            <p class="text-white"><a href="/Download">Download it now!</a></p>
                        </div>
                    </div>
                    <div class="item">
                        <img alt="IMPACTS - a virtual reality experience" src="@Model.ImgDir/IPS-hero.jpg" class="img-responsive" id="heroBg" />

                        <div class="hero-backdrop left">
                            <h4 class="text-white" style="line-height: 2">From the International Space Station to flights over craters on Earth, the Moon, Mars and Mercury - you will <a href="/Planetariums/Impacts">learn how impacts have shaped our Solar System.</a></h4>
                        </div>
                    </div>
                </div>

                
                <a class="left carousel-control" href="#carousel" data-slide="prev">
                    <span class="fa fa-angle-left"></span>
                </a>
                <a class="right carousel-control" href="#carousel" data-slide="next">
                    <span class="fa fa-angle-right"></span>
                </a>
            </div>

            
        </div>
    </div>

</div>


    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="row home-features">
                <div class="col-md-4 col-md-offset-0 col-sm-6 col-sm-offset-3 col-xs-12">
                    <a href="/Download/">
                        <img src="@Model.ImgDir/webclient-thumbnails.jpg" class="img-responsive" />
                        <i class="fa fa-download"></i>
                        <h4>Install WorldWide Telescope</h4>
                        <h5>Free Windows<sup>&reg;</sup> Application</h5>
                    </a>
                </div>
                <div class="col-md-4 col-md-offset-0 col-sm-6 col-sm-offset-3 col-xs-12">
                    <a href="javascript:location.href = wwt.wcLink">
                        <img src="@Model.ImgDir/starz2.jpg" class="img-responsive" />
                        <i class="fa fa-arrow-circle-o-right"></i>
                        <h4>Explore WWT on the Web</h4>
                        <h5>Try the HTML5 Web Application</h5>
                    </a>
                </div>
                <div class="col-md-4 col-md-offset-0 col-sm-6 col-sm-offset-3 col-xs-12">
                    <a href="https://www.youtube.com/channel/UCjx-BjxGX6vvxALi9ziBfjA/videos" target="_blank">
                        <img src="@Model.ImgDir/youtube-channel.jpg" class="img-responsive" />
                        <i class="fa fa-caret-square-o-right"></i>
                        <h4>Check out our videos</h4>
                        <h5>Learn more about WWT's world</h5>
                    </a>
                </div>

            </div>
            <div class="row">
                <section class="col-md-8" style="vertical-align: top">

                   

                </section>
                @if (ConfigurationManager.AppSettings["twitterId"] != "xxx")
                {
                    // need a valid twitter id
                    <style>
                        .row .twitter-widget-section iframe {
                            height: 1012px !important;
                        }
                    </style>
                    <section class="col-md-4 twitter-widget-section">
                        <h3 style="margin-bottom: 7px">Twitter</h3>
                        <hr style="margin: 0"/>
                        <a class="twitter-timeline" href="https://twitter.com/WWTelescope" data-widget-id="443201388147789827">Tweets by @@WWTelescope</a>
                        <script>
                            !function(d, s, id) {
                                var js, fjs = d.getElementsByTagName(s)[0], p = /^http:/.test(d.location) ? 'http' : 'https';
                                if (!d.getElementById(id)) {
                                    js = d.createElement(s);
                                    js.id = id;
                                    js.src = p + "://platform.twitter.com/widgets.js";
                                    fjs.parentNode.insertBefore(js, fjs);
                                }
                            }(document, "script", "twitter-wjs");
                        </script>

                    </section>
                }
            </div>
        </div>
    </div>


    <br /><br />
